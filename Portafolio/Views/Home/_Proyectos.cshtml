@model IEnumerable<Proyecto>


@if (Model.Proyectos is not null)
{
    <div class="text-center pt-4">
        <h1>Mis trabajos Recientes</h1>
        <p>Aquí puedes ver mis trabajos más recientes.</p>
    </div>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model.Proyectos)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenUrl" class="card-img-top"></img>
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Visitar Sitio</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}